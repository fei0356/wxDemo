/* pages/mpSearch/mpSearch.wxss */

form{
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:space-between;
    padding:200rpx 0;
    box-sizing:border-box;
    transition: all 0.3s;
    background: #fff;
    text-align: center;
}
.formActive{
    padding:50rpx 0;
}
.section__title{
    margin:10rpx 0;
}
input{
    box-sizing: border-box;
    display: block;
    width:100%;
    height:80rpx;
    margin: 20rpx 0 50rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    padding:5rpx 10rpx;
    text-align: left;
}

.list-box{
    display: flex;
    flex-flow: column;
    padding-top:100rpx;
}
.list{
    display: flex;
    justify-content: space-around;
    border:1rpx solid #eee;
    border-bottom:none;
    padding:10rpx 50rpx;
}
.list:last-child{
    border-bottom:1rpx solid #eee;
}
.user-motto{
    font-size: 0.7rem;
    color:#666;
}
.user-motto:last-child{
    max-width:500rpx;
    margin-top:20rpx;
    overflow: hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
}
.user-motto:first-child{
    font-size: 0.8rem;
    margin-bottom:10rpx;
}
.text-box{
    display: flex;
    flex-flow: column;
    flex: auto;
    justify-content: center
}

.userinfo-avatar{
    flex: 0 0 150rpx;
    height:150rpx;
    border-radius: 50%;
    margin-right:20rpx;
}
.btn-more{
    margin:0;
}
.nodata{
    text-align: center;
}
.search{
    background: none;
    position: absolute;
    top:0;
    right:20rpx;
    width:100rpx;
    height:100rpx;
    padding-right:20rpx;
    z-index: 2;
}
.search::after{
    border:none;
}

.formS{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100rpx;
    margin:0;
    padding:0;
    background: #fff;
}
.inputS{
    box-sizing: border-box;
    margin:0;
    padding:0;
    padding-left:10rpx;
    width:auto;
    position: absolute;
    left:20rpx;
    right:20rpx;
    top:0;
}